# Build stage
FROM golang:1.22.4 as build

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN go build -o main .

# Final stage
FROM nvidia/cuda:12.2.2-base-ubuntu22.04

RUN apt-get update && apt-get install -y \
    ca-certificates

RUN apt-get install -y nvidia-utils-535
RUN which nvidia-smi

WORKDIR /app
COPY --from=build /app/main .

EXPOSE 58231

CMD ["./main"]
